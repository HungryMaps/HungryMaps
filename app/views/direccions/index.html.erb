<h1>Listado direcciones</h1>

<table>
  <thead>
    <tr>
      <th>Restaurante</th>
      <th>Señas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @direccions.each do |direccion| %>
      <tr>
        <td><%= direccion.restaurante_id %></td>
        <td><%= direccion.señas %></td>
        <td><%= link_to 'Mostrar', direccion %></td>
        <td><%= link_to 'Editar', edit_direccion_path(direccion) %></td>
        <td><%= link_to 'Destruir', direccion, method: :delete, data: { confirm: '¿Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Direccion', new_direccion_path %>
