<body style="background-color:FCFDC5;">
<h1 style="font-family:arial; text-align:center; color:A03719"> Lista De Telefonos</h1>
</body>
<center>
<table style="width:300px; text-allign=center;">
  <thead>
    <tr>
      <th>Restaurante</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @telefonos.each do |telefono| %>
      <tr>
        <td><%= telefono.restaurante_id %></td>
        <td><%= telefono.telefono %></td>
        <td><%= link_to 'Mostrar', telefono %></td>
        <td><%= link_to 'Editar', edit_telefono_path(telefono) %></td>
        <td><%= link_to 'Destruir', telefono, method: :delete, data: { confirm: '¿Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>
<br>
<center>
<%= link_to 'Inicio', indice_path %>
<%= link_to 'Nuevo Telefono', new_telefono_path %>
</center>
