<h1>Tipo Comidas</h1>

<table>
  <thead>
    <tr>
      <th>Tipo comida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_comidas.each do |tipo_comida| %>
      <tr>
        <td><%= tipo_comida.tipo_comida %></td>
        <td><%= link_to 'Mostrar', tipo_comida %></td>
        <td><%= link_to 'Editar', edit_tipo_comida_path(tipo_comida) %></td>
        <td><%= link_to 'Eliminar', tipo_comida, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tipo comida', new_tipo_comida_path %>
