<body style="background-color:#CAF078;">
<center>
<br>
<br>
<h1>Tipo de Comidas</h1>
<br>
<style type="text/css">
.myTable { background-color:#eee;border-collapse:collapse; }
.myTable th { background-color:#45A91A;color:white;width:50%; }
.myTable td, .myTable th { text-align:center; padding:5px;border:1px solid #000; }
</style>

<table class="myTable" style="width:400px">
  <thead>
    <tr>
      <th>Tipo comida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <%= form_tag(tipo_comidas_path, :method => :get) do %>
    <%= label_tag(:tipo_comida, "Busqueda por tipo de comida") %>
    <%= text_field_tag "searchbox", params[:searchbox] %>
    <%= submit_tag("Buscar") %>
    <% end %>

    <% @tipo_comidas.each do |tipo_comida| %>
      <tr>
        <td><%= tipo_comida.tipo_comida %></td>
        <td>
	<% tipo_comida.restaurantes.each do |r|%>
	<div><%= link_to r.nombre_restaurante, restaurante_path(id: r.id) %> </div>
	<% end %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</center>
