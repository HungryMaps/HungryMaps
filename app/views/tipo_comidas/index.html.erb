<h1>Tipo de Comidas</h1>
<br>
<style type="text/css">
.myTable { background-color:#eee;border-collapse:collapse; }
.myTable th { background-color:#45A91A;color:white;width:50%; }
.myTable td, .myTable th { text-align:center; padding:5px;border:1px solid #000; }
</style>

<table class="myTable" style="width:400px">
  <thead>
    <tr>
      <th>Tipo comida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_comidas.each do |tipo_comida| %>
      <tr>
        <td><%= tipo_comida.tipo_comida %></td>
        <td><%= link_to 'Mostrar', tipo_comida %></td>
        <td><%= link_to 'Editar', edit_tipo_comida_path(tipo_comida) %></td>
        <td><%= link_to 'Eliminar', tipo_comida, method: :delete, data: { confirm: '¿Está seguro de que desea eliminar este tipo de comida?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tipo comida', new_tipo_comida_path %>

</center>
