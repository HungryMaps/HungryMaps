<body style="background-color:FCFDC5;">
<h1 style="font-family:arial; text-align:center; color:A03719">Listando Cantones</h1>
</body>
<br>
<center>
<table style="width:300px; text-allign=center;">
  <thead>
    <tr>
      <th>Nombre canton</th>
      <th>Provincia</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cantons.each do |canton| %>
      <tr>
        <td><%= canton.nombre_canton %></td>
        <td><%= canton.provin_id %></td>
        <td><%= canton.direccion_id %></td>
        <td><%= link_to 'Mostrar', canton %></td>
        <td><%= link_to 'Editar', edit_canton_path(canton) %></td>
        <td><%= link_to 'Eliminar', canton, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</center>
