<body style="background-color:FCFDC5;">
<h1 style="font-family:arial; text-align:center; color:A03719">Listado de Distritos</h1>
</body>

<center>
<table style="width:300px; text-allign=center;">
  <thead>
    <tr>
      <th>Nombre distrito</th>
      <th>Canton</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @distritos.each do |distrito| %>
      <tr>
        <td><%= distrito.nombre_distrito %></td>
        <td><%= distrito.canton_id %></td>
        <td><%= distrito.direccion_id %></td>
        <td><%= link_to 'Mostrar', distrito %></td>
        <td><%= link_to 'Editar', edit_distrito_path(distrito) %></td>
        <td><%= link_to 'Eliminar', distrito, method: :delete, data: { confirm: '¿Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>

<br>
<center>

<%= link_to 'Nuevo Distrito', new_distrito_path %>
</center>
