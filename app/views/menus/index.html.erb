<h1>Listing menus</h1>

<table>
  <thead>
    <tr>
      <th>Restaurante</th>
      <th>Nombre platillo</th>
      <th>Precio</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.restaurante_id %></td>
        <td><%= menu.nombre_platillo %></td>
        <td><%= menu.precio %></td>
        <td><%= menu.categoria_id %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu', new_menu_path %>
