<body style="background-color:FCFDC5;">
<h1 style="font-family:arial; text-align:center; color:A03719"> Lista de Menus</h1>
</body>
<center>
<table style="width:300px; text-allign=center;">
  <thead>
    <tr>
      <th>Restaurante</th>
      <th>Nombre platillo</th>
      <th>Precio</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.restaurante_id %></td>
        <td><%= menu.nombre_platillo %></td>
        <td><%= menu.precio %></td>
        <td><%= menu.categor_id %></td>
        <td><%= link_to 'Mostrar', menu %></td>
        <td><%= link_to 'Editar', edit_menu_path(menu) %></td>
        <td><%= link_to 'Eliminar', menu, method: :delete, data: { confirm: '¿Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>

<br>
<center>

<%= link_to 'Nuevo Menu', new_menu_path %>
</center>
