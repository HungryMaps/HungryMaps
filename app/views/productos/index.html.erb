<h1>Lista productos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre producto</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th>Tipo producto</th>
      <th>Restaurante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre_producto %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.descripcion %></td>
        <td><%= producto.tipo_producto_id %></td>
        <td><%= producto.restaurante_id %></td>
        <td><%= link_to 'Mostar', producto %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto', new_producto_path %>
